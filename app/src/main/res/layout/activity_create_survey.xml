<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".CreateSurvey">
    <TextView
        android:id="@+id/create_survey_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Survey"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:textSize="30dp"
        android:textStyle="bold"
        android:background="#0091EA"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter a name"
        android:id="@+id/editText"
        android:layout_alignBottom="@+id/textView8"
        android:layout_toRightOf="@+id/textView7"
        android:layout_toEndOf="@+id/textView7" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="57dp"
        android:background="#0091EA"
        android:text="Session Name: "
        android:textSize="20dp"
        android:textStyle="bold"
        android:padding="8dp"
        android:id="@+id/textView8"
        android:layout_below="@+id/create_survey_text"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#0091EA"
        android:text="The Password:"
        android:textSize="20dp"
        android:textStyle="bold"
        android:padding="8dp"
        android:layout_centerVertical="true"
        android:id="@+id/textView9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#0091EA"
        android:text="8546123"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="8dp"

        android:layout_alignTop="@+id/textView9"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:background="#0091EA"
        android:text="Number of connected devices"
        android:textSize="15dp"
        android:textStyle="bold"
        android:padding="5dp"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView9"
        android:layout_alignRight="@+id/create_session_text"
        android:layout_alignEnd="@+id/create_session_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="15dp"

        android:layout_alignBottom="@+id/textView7"
        android:layout_toRightOf="@+id/button4"
        android:layout_toEndOf="@+id/button4" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#0091EA"
        android:text="Start"
        android:textSize="20dp"
        android:textStyle="bold"
        android:padding="10dp"
        android:id="@+id/button4"
        android:layout_marginBottom="41dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/textView8"
        android:layout_toEndOf="@+id/textView8"
        android:onClick="startSession"/>




</RelativeLayout>