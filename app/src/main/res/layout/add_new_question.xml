<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    tools:context=".addNewQuestion">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add a new question"
        android:padding="20dp"
        android:layout_margin="15dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="#0091EA"
        android:id="@+id/textView5" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/add_question"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/add_question"
        android:layout_alignLeft="@+id/add_question"
        android:layout_alignStart="@+id/add_question"
        android:id="@+id/radioGroup">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:id="@+id/two_choices"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:id="@+id/three_choices"
            />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:id="@+id/four_choices"
            />

    </RadioGroup>

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:paddingTop="10dp"
        android:id="@+id/firs_choice"
        android:layout_below="@+id/fourth_choice"
        android:layout_alignLeft="@+id/fourth_choice"
        android:layout_alignStart="@+id/fourth_choice" />
    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:paddingTop="10dp"
        android:id="@+id/second_choice"
        android:layout_below="@+id/third_choice"
        android:layout_alignLeft="@+id/third_choice"
        android:layout_alignStart="@+id/third_choice" />
    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:paddingTop="10dp"
        android:id="@+id/third_choice"
        android:layout_below="@+id/firs_choice"
        android:layout_alignLeft="@+id/firs_choice"
        android:layout_alignStart="@+id/firs_choice" />
    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:paddingTop="10dp"
        android:id="@+id/fourth_choice"
        android:layout_below="@+id/radioGroup"
        android:layout_alignLeft="@+id/radioGroup"
        android:layout_alignStart="@+id/radioGroup" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:background="#0091EA"
        android:singleLine="false"
        android:layout_gravity="right"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="38dp"
        android:layout_marginEnd="38dp" />


</RelativeLayout>